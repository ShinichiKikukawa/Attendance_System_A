<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h1 class="modal-title">拠点編集</h1>
      <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>
    
    <div class="modal-body">
      <%= form_with(model: @base, url: basis_path(@base), local: true) do |f| %>
      
       <%= f.label :"拠点番号", class: "label-base-edit" %>
       <%= f.number_field :base_number, class: "form-control", min: 1, max: 1000 %>
      
       <%= f.label :"拠点名", class: "label-base-edit" %>
       <%= f.text_field :base_name, class: "form-control" %>
      
       <%= f.label :"勤怠種類", class: "label-base-edit" %>
       <%= f.select :work_type, ["出社", "リモート"], {include_blank: "選択してください｡"}, class: "form-control" %>

      <div class= "center">
        <%= f.submit "更新", class: "btn btn-primary btn-block btn-base-edit" %>
      </div>
    <% end %>
   </div>
  </div>
</div>