              <% if day.started_at.present? && day.finished_at.present? %> 
                <%= str_times = working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
                <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
              <% end %>
            </td>
            <td><%= day.note %></td>  <!-- 11備考 -->
          </tr>
        <% end %>
      </tbody> 
<%
=end%>

    <tfoot>
      <tr>
        <td colspan="2">累計日数</td><!--rowspan:縦連結、colspan：横連結-->
        <td colspan="6">総合勤務時間</td>
        <td colspan="2">累計在社時間</td>
      </tr>
      <tr>
        <td colspan="2"><%= @attendances.count %></td>
        <td colspan="6"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td colspan="2"><%= format("%.2f", @total_working_time.to_f) %></td>
        <td colspan="5"></td>
        
        <td> <!-- 1ヶ月分の勤怠を申請する -->
          <% day = @attendances.find_by(worked_on: @last_day) %>
          <% if current_user?(@user) || current_user.admin? %>
            <%= form_with(model: @user, url: attendances_update_one_month_request_user_path(@user), method: :patch, local: true) do |f| %>
              <%= f.fields_for "attendance[]", day do |attendance| %>
                  所属長承認
                  <span>
                    <% if day.selector_one_month_request.blank? && day.one_month_approval_result.blank? %>
                      未送信
                    <% elsif day.selector_one_month_request.present? && day.one_month_approval_result.blank? %>
                      <%= day.selector_one_month_request %>へ申請中
                      <% else day.confirm_superior_one_month_request.present? %>
                      <%= day.one_month_approval_result %>
                    <% end %>
                  </span></br>
                  <%= attendance.collection_select :selector_one_month_request, @superiors, :name, :name, {include_blank: true}, class: "form-control" %>
              <% end %>
              <%= f.submit "申請", class: "btn btn-primary btn-sm btn-block", id: "btn-one_month-request" %>
            <% end %>
          <% else %>
              所属長承認
              <span>
                <% if day.selector_one_month_request.blank? && day.one_month_approval_result.blank? %>
                  未送信
                <% elsif day.selector_one_month_request.present? && day.one_month_approval_result.blank? %>
                  <%= day.selector_one_month_request %>へ申請中
                <% else day.confirm_superior_one_month_request.present? %>
                  <%= day.one_month_approval_result %>
                <% end %>
              </span>
          <% end %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>

